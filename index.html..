        // --- 1. ุงูุชููู ุจูู ุงูุตูุญุงุช ---
        function showPage(pageId) {
            // ุฅุฎูุงุก ูู ุงูุฃูุณุงู
            const sections = document.querySelectorAll('section');
            sections.forEach(sec => sec.classList.remove('active-page'));
            
            // ุฅุธูุงุฑ ุงููุณู ุงููุทููุจ
            const activeSection = document.getElementById(pageId);
            if(activeSection) {
                activeSection.classList.add('active-page');
            }

            // ุชุญุฏูุซ ุงูุฃุฒุฑุงุฑ
            const buttons = document.querySelectorAll('.nav-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            
            // ูุญุงููุฉ ุชูููู ุงูุฒุฑ ุงููุดุท (ุจุญุซ ุจุณูุท)
            buttons.forEach(btn => {
                if(btn.getAttribute('onclick').includes(pageId)) {
                    btn.classList.add('active');
                }
            });

            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

